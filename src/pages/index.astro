---
import Selector from "../layouts/selector.astro";
import Card from "../components/card.astro";
---

<Selector>
  <div class="main">
    <div class="left">
      <Card
        title="Portfolio Site"
        sColor="#E0E1DD"
        pColor="#0D1B2A"
        url="https://tejasbhovad.vercel.app/"
      >
        <div class="contain">
          <div class="circle"><span class="circle-text">&lt;T&gt;</span></div>
        </div>
      </Card>
    </div><div class="right">
      <Card
        title="Documentation"
        pColor="#E0E1DD"
        sColor="#0D1B2A"
        url="https://tejasbhovad.github.io/docs/"
      >
        <div class="contain">
          <p>&lt;docs&gt;</p>
        </div>
      </Card>
    </div>
  </div>
</Selector>
<style>
  .left {
    transition: ease-in-out 0.25s;
    width: 50%;
    height: 100%;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
  }
  .right {
    transition: ease-in-out 0.25s;
    width: 50%;
    background-color: #e0e1dd;
    height: 100%;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 50%;
    margin: 0;
    padding: 0;
  }
  .contain {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80%;
    min-height: 2rem;
    transition: ease-in-out 0.25s;
  }
  .circle {
    transition: ease-in-out;
    box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
    width: 20vw;
    height: 20vw;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      rgba(7, 74, 130, 1) 8%,
      rgba(0, 211, 255, 1) 100%
    );
    /* margin-bottom: 20vh; */
    position: relative;
  }
  .circle-text {
    font-family: Arial, Helvetica, sans-serif;
    transition: ease-in-out;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 8dvw;
    font-weight: 800;
    color: white;
    text-align: center;
  }
  p {
    margin-top: 1rem;
    font-size: 3.5rem;
    font-weight: 800;
    background-color: #0d1b2a;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border-radius: 1.75rem;
  }
  .left {
    background-color: #0d1b2a;
  }
  .main {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }
  @media screen and (max-width: 700px) {
    .main {
      flex-direction: row;
    }
    .left {
      width: 100%;
      position: absolute;
      right: 0;
      left: 0;
    }
    .right {
      right: 0;
      left: 0;
      width: 100%;
      position: absolute;
      top: 100%;
    }
    .circle {
      transition: ease-in-out;
      width: 15rem;
      height: 15rem;
    }
    .circle-text {
      transition: ease-in-out;
      font-size: 6rem;
    }
  }
</style>
